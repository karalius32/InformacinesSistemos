@model InformacinesSistemos.ViewModels.BookEditViewModel

@{
    ViewData["Title"] = "Redaguoti knygą";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Redaguoti knygą</h2>
    @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" asp-controller="Books" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label">Pavadinimas</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Identifier" class="form-label">Identifikatorius</label>
                        <input asp-for="Identifier" class="form-control" />
                        <span asp-validation-for="Identifier" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="PublishDate" class="form-label">Išleidimo data</label>
                        <input asp-for="PublishDate" type="date" class="form-control" />
                        <span asp-validation-for="PublishDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="UpdatedDate" class="form-label">Atnaujinimo data</label>
                        <input asp-for="UpdatedDate" type="date" class="form-control" />
                        <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label">Aprašymas</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="PageCount" class="form-label">Puslapių skaičius</label>
                        <input asp-for="PageCount" type="number" class="form-control" />
                        <span asp-validation-for="PageCount" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Publisher" class="form-label">Leidėjas</label>
                        <input asp-for="Publisher" class="form-control" />
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Language" class="form-label">Kalba</label>
                        <input asp-for="Language" class="form-control" />
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Format" class="form-label">Formatas</label>
                        <input asp-for="Format" class="form-control" />
                        <span asp-validation-for="Format" class="text-danger"></span>
                    </div>

                    <div class="col-md-8">
                        <label asp-for="CoverUrl" class="form-label">Viršelio URL</label>
                        <input asp-for="CoverUrl" class="form-control" />
                        <span asp-validation-for="CoverUrl" class="text-danger"></span>
                        <small class="text-muted">Įrašyk tiesioginį paveikslėlio URL (pvz. baigiasi .jpg/.png)</small>
                    </div>

                    <div class="col-md-4">
                        @if (!string.IsNullOrWhiteSpace(Model.CoverUrl))
                        {
                            <label class="form-label">Peržiūra</label>
                            <div>
                                <img src="@Model.CoverUrl" alt="Viršelis" style="max-width:150px; max-height:220px; object-fit:cover;" />
                            </div>
                        }
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Keywords" class="form-label">Raktažodžiai</label>
                        <input asp-for="Keywords" class="form-control" />
                        <span asp-validation-for="Keywords" class="text-danger"></span>
                    </div>
                </div>
                @{
                    var authors = Model?.AvailableAuthors ?? new List<InformacinesSistemos.ViewModels.BookEditViewModel.AuthorPickRow>();
                    var categories = Model?.CategoryOptions ?? new List<InformacinesSistemos.ViewModels.BookEditViewModel.CategoryOption>();
                }

                <div class="card mt-4">
                    <div class="card-header">
                        Autoriai (pasirink 0 arba daugiau)
                    </div>
                    <div class="card-body">
                        @if (!authors.Any())
                        {
                            <div class="text-muted">Autorių sąrašas tuščias.</div>
                        }
                        else
                        {
                            for (int i = 0; i < authors.Count; i++)
                            {
                                <input type="hidden" asp-for="AvailableAuthors[i].AuthorId" />
                                <input type="hidden" asp-for="AvailableAuthors[i].FullName" />

                                <div class="row align-items-end mb-2 pb-2 border-bottom">
                                    <div class="col-6">
                                        <div class="form-check">
                                            <input asp-for="AvailableAuthors[i].Selected" class="form-check-input" />
                                            <label class="form-check-label" for="@Html.IdFor(m => m.AvailableAuthors[i].Selected)">
                                                @authors[i].FullName
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-3">
                                        <label class="form-label small mb-0">Indėlis (%)</label>
                                        <input asp-for="AvailableAuthors[i].Contribution"
                                            type="number" min="0" max="100"
                                            class="form-control form-control-sm" />
                                    </div>

                                    <div class="col-3">
                                        <label class="form-label small mb-0">Vaidmuo</label>
                                        <select asp-for="AvailableAuthors[i].Role" class="form-select form-select-sm">
                                            <option value="author">Autorius</option>
                                            <option value="coauthor">Bendraautorius</option>
                                            <option value="editor">Redaktorius</option>
                                            <option value="translator">Vertėjas</option>
                                        </select>
                                    </div>
                                </div>
                            }
                        }
                        <div class="form-text">Pažymėk autorius ir nurodyk indėlį bei vaidmenį.</div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        Kategorija (pasirink 1 arba nepasirink)
                    </div>
                    <div class="card-body">
                        <label class="form-label">Kategorija</label>
                        <select asp-for="SelectedCategoryId" class="form-select">
                            <option value="">-- Nekategorizuota --</option>
                            @foreach (var c in categories)
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-success">Išsaugoti</button>

                    <a href="@(
                        string.IsNullOrWhiteSpace(Model?.ReturnUrl)
                            ? Url.Action("Index","Home")
                            : Model!.ReturnUrl
                    )" class="btn btn-outline-secondary">Atšaukti</a>
                </div>
                </form>

                @{
                    var title = Model.Title ?? "-";
                    var authors = string.IsNullOrWhiteSpace(Model.AuthorsDisplay) ? "-" : Model.AuthorsDisplay;
                    var msg = $"Ar tikrai norite ištrinti knygą \"{title}\" (Autorius: {authors})?\nŠis veiksmas negrįžtamas.";
                    var msgJson = System.Text.Json.JsonSerializer.Serialize(msg);
                }

                <form asp-controller="Books" asp-action="Delete" method="post" class="mt-3"
                    onsubmit="return confirm(@msgJson);">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-danger">Ištrinti knygą</button>
                </form>
        </div>
    </div>
</div>

@functions {
    public string ConfirmDeleteText(string? title, string? authors)
    {
        var t = title ?? "-";
        var a = string.IsNullOrWhiteSpace(authors) ? "-" : authors;

        var msg = $"Ar tikrai norite ištrinti knygą \"{t}\" (Autorius: {a})?";
        return "'" + msg.Replace("\\", "\\\\").Replace("'", "\\'").Replace("\"", "\\\"") + "'";
    }
}