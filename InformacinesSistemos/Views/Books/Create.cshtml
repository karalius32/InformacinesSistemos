@model InformacinesSistemos.ViewModels.BookCreateViewModel

@{
    ViewData["Title"] = "Sukurti knygą";
    var backUrl = (!string.IsNullOrWhiteSpace(Model?.ReturnUrl) && Url.IsLocalUrl(Model.ReturnUrl))
        ? Model.ReturnUrl
        : Url.Action("Index", "Home");
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Books" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ReturnUrl" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Identifier" class="form-label"></label>
                <input asp-for="Identifier" class="form-control" />
                <span asp-validation-for="Identifier" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PublishDate" class="form-label"></label>
                <input asp-for="PublishDate" class="form-control" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
                <div class="form-text">Pvz.: 2024-01-31</div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PageCount" class="form-label"></label>
                <input asp-for="PageCount" class="form-control" />
                <span asp-validation-for="PageCount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Publisher" class="form-label"></label>
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Language" class="form-label"></label>
                    <input asp-for="Language" class="form-control" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Format" class="form-label"></label>
                    <input asp-for="Format" class="form-control" />
                    <span asp-validation-for="Format" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="CoverUrl" class="form-label"></label>
                <input asp-for="CoverUrl" class="form-control" />
                <span asp-validation-for="CoverUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Keywords" class="form-label"></label>
                <input asp-for="Keywords" class="form-control" />
                <span asp-validation-for="Keywords" class="text-danger"></span>
                <div class="form-text">Raktažodžiai, atskirti kableliais.</div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    Autorius (nebūtina)
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="AuthorFirstName" class="form-label"></label>
                        <input asp-for="AuthorFirstName" class="form-control" />
                        <span asp-validation-for="AuthorFirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AuthorLastName" class="form-label"></label>
                        <input asp-for="AuthorLastName" class="form-control" />
                        <span asp-validation-for="AuthorLastName" class="text-danger"></span>
                    </div>

                    <div class="form-text">
                        Jei įvesi autorių, sistema sukurs arba pririš prie esamo.
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Sukurti</button>
                <a class="btn btn-outline-secondary" href="@backUrl">Atgal</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
