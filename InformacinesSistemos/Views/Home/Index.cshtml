@using InformacinesSistemos.Models
@using InformacinesSistemos.Models.ToDelete
@model IEnumerable<BookSimple>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h1 class="display-4 text-center mb-4">Bibliotekos sistema</h1>

    <div class="card">
        <div class="card-body">
            <form method="get" action="@Url.Action("Results","Search")" class="row g-3">
                <div class="col-md-9">
                    <input type="text" name="q" class="form-control" placeholder="Įvesk knygos pavadinimą">
                </div>
                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-success">Ieškoti</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="mb-3 text-center ">Visos knygos</h5>

            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Pavadinimas</th>
                        <th>Autorius</th>
                        <th>Metai</th>
                        <th>Veiksmai</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model.Any())
                {
                    <tr><td colspan="4" class="text-center">Nėra knygų</td></tr>
                }
                else
                {
                    foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.Title</td>
                            <td>@b.Author</td>
                            <td>@b.Year</td>
                            <td>
                                <a asp-controller="Books" asp-action="Edit" asp-route-id="@b.Id"
                                   class="btn btn-sm btn-outline-primary">Redaguoti</a>
                                <a asp-controller="Ratings" asp-action="Create" asp-route-bookId="@b.Id"
                                   class="btn btn-sm btn-success">Palikti įvertinimą</a>
                                <a asp-controller="Lending" asp-action="LendBook" asp-route-bookId="@b.Id"
                                       class="btn btn-sm btn-outline-primary">Pasiimti</a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-controller="Books" asp-action="Create" class="btn btn-secondary btn-sm">+ Sukurti knygą</a>
    </div>
</div>
