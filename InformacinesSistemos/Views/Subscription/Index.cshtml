@model List<Subscription>

@*
PSEUDOCODE / PLAN:
1. Determine if the current user already has an active subscription:
   - Check Model (List<Subscription>) for any item where Status == SubscriptionStatus.Active.
   - Store result in a bool variable `hasActiveSubscription`.
2. Update the purchase form button:
   - If hasActiveSubscription == true:
     - Render the button disabled (use the `disabled` attribute).
     - Change button text to "Jūs jau turite galiojančią prenumeratą".
     - Optionally use a secondary/disabled styling class.
   - Else:
     - Render the button enabled with original text "Pirkti su kriptovaliuta" and primary styling.
3. Keep the rest of the view unchanged.
*@

@{
    ViewData["Title"] = "Prenumerata";
    bool hasActiveOrPendingSubscription = Model?.Any(s => s.Status == InformacinesSistemos.Models.Enums.SubscriptionStatus.Active || s.Status == InformacinesSistemos.Models.Enums.SubscriptionStatus.PendingPayment) ?? false;
}

<div class="container mt-5">

    <h2 class="mb-4 text-center">Prenumerata</h2>

    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center d-flex flex-column">
                    <h4 class="card-title mb-2">Basic</h4>
                    <p class="card-text text-muted mb-3">30 dienų prenumerata</p>

                    <div class="mb-3">
                        <span class="display-6 fw-bold">1.00 €</span>
                        <div class="text-muted small">30 dienų</div>
                    </div>

                    <form asp-controller="Subscription"
                          asp-action="BuyWithCrypto"
                          method="post"
                          class="mt-auto">
                        @Html.AntiForgeryToken()

                        <button type="submit"
                                class="@(hasActiveOrPendingSubscription ? "btn btn-secondary w-100" : "btn btn-primary w-100")"
                                @(hasActiveOrPendingSubscription ? "disabled" : "")>
                            @(hasActiveOrPendingSubscription ? "Jūs jau turite galiojančią arba laukiamą apmokėjimo prenumeratą" : "Pirkti su kriptovaliuta")
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <h3 class="mb-3">Mano prenumeratos</h3>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Jūs dar neturite prenumeratų.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Pirkimo data</th>
                        <th>Galioja iki</th>
                        <th>Statusas</th>
                        <th>Veiksmai</th> @* NEW *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.OrderByDescending(x => x.PurchaseDate))
                    {
                        var isActive = s.ValidUntil.HasValue &&
                        s.ValidUntil.Value >= DateOnly.FromDateTime(DateTime.Today) &&
                        s.Status == InformacinesSistemos.Models.Enums.SubscriptionStatus.Active;

                        <tr>
                            <td>@(s.PurchaseDate?.ToString("yyyy-MM-dd") ?? "-")</td>

                            <td>
                                @if (s.ValidUntil.HasValue)
                                {
                                    <span class="@(isActive ? "text-success fw-semibold" : "text-muted")">
                                        @s.ValidUntil.Value.ToString("yyyy-MM-dd")
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>

                            <td>
                                <span class="badge @(isActive ? "bg-success" : "bg-secondary")">
                                    @s.Status.ToString()
                                </span>
                            </td>

                            <td>
                                @if (isActive)
                                {
                                    <form asp-controller="Subscription"
                                          asp-action="Deactivate"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()

                                        @* Pass subscription id *@
                                        <input type="hidden" name="id" value="@s.Id" />

                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Ar tikrai norite nutraukti prenumeratą?');">
                                            Deaktyvuoti
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
