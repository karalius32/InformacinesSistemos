@model InformacinesSistemos.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-4">Paskyros sukūrimas</h2>

    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger mb-2"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Pašto adresas</label>
            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Slaptažodis</label>
            <input asp-for="Password" class="form-control" placeholder="••••••••" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Patvirtinti slaptažodį</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">Vardas</label>
            <input asp-for="FirstName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Pavardė</label>
            <input asp-for="LastName" class="form-control" />
        </div>

        <button type="submit" class="btn btn-outline-secondary w-100">
            Registruotis
        </button>

        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Login">Jau turi paskyrą? Prisijunk</a>
        </div>
    </form>
</div>


