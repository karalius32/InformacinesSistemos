@{
    ViewData["Title"] = "Įvertinimo forma";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Įvertinimo forma</h2>

    <div class="card">
        <div class="card-body">
            <form>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Įvertinimas (1–5)</label>
                        <select class="form-select">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option selected>5</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex gap-2 justify-content-end mt-4">
                    <button type="button" class="btn btn-secondary" onclick="history.back()">Atšaukti</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-success">Išsaugoti</a>
                </div>
            </form>
        </div>
    </div>
</div>