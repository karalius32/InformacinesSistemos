<!-- _Layout.cshtml -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC Prototype</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Bibliotekos sistema</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <!-- Left side nav links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Pradžia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="BorrowedBooks" asp-action="Index">Skolinimų posistemė</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">Administravimas</a>
                    </li>
                </ul>

                <!-- Right side: profile avatar dropdown -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link d-flex align-items-center dropdown-toggle p-0" href="#" id="profileMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="avatar-circle me-2">
                                <svg viewBox="0 0 40 40" width="32" height="32" aria-hidden="true">
                                    <circle cx="20" cy="20" r="20" fill="#6c757d"></circle>
                                    <circle cx="20" cy="15" r="7" fill="#adb5bd"></circle>
                                    <path d="M6,36 C8,28 32,28 34,36" fill="#adb5bd"></path>
                                </svg>
                            </span>
                            <span class="d-none d-lg-inline">Profilis</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileMenu">
                            <li><h6 class="dropdown-header">Sveiki!</h6></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Prisijungti</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Atsijungti</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Edit">Redaguoti profilį</a></li>
                            <li><a class="dropdown-item" asp-controller="Subscriptions" asp-action="Index">Prenumerata</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - MVC Prototype
        </div>
    </footer>

    <style>
        .avatar-circle {
            display: inline-flex;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            overflow: hidden;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
