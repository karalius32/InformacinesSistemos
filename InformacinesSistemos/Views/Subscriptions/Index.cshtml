@{
    ViewData["Title"] = "Prenumeratos planai";
}

<div class="container mt-5">
    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h4 class="card-title mb-3">Basic</h4>
                    <p class="card-text text-muted">30 dienų prenumerata</p>
                    <h5 class="fw-bold mb-4">9.99 €</h5>
                    <form asp-controller="Subscriptions"
                          asp-action="BuyWithCrypto"
                          method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary w-100">
                            Pirkti su kriptovaliuta
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
